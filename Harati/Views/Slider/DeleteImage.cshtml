@model Harati.Models.Slider

@{
    ViewBag.Title = "DeleteImage";
    Layout = "~/Views/Shared/_LayoutHarati.cshtml";
}

<h2>Delete Image</h2>

<div style="margin-top:12%; margin-left:5%;">

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                Image
            </dt>

            <dd>
                <img src="~/@Url.Content(Model.image)" height="300" width="200" alt="Image" />
            </dd>
        </dl>

        @using (Html.BeginForm("Delete", "Slider", new { id = Model.Id }))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index", "Slider", null, new { @class = "glyphicon glyphicon-arrow-left" })
            </div>
        }
    </div>
</div>
