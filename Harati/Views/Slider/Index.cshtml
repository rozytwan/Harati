@model IEnumerable<Harati.Models.Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHarati.cshtml";

}

<div style="margin-top:22%; margin-left:5%;">
    <p>
        @Html.ActionLink("Add New Image", "AddImage", "Slider")
    </p>
    <h2>Slider</h2>

    <table id="example" class="table table-striped table-bordered" border="1" width="40">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>

            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/@Html.DisplayFor(modelItem => item.image) " height="50" width="50" />
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem => item.status)

                </td>
                <td>
                    @Html.ActionLink("Edit", "../Slider/EditImage", new { id = item.Id }) |

                    @Html.ActionLink("Delete", "../Slider/DeleteImage", new { id = item.Id })
                </td>
            </tr>
        }

    </table>


</div>