@model PagedList.IPagedList<Harati.Models.Item>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Carpet";
    Layout = "~/Views/Shared/_LayoutHarati.cshtml";
}
<center>
    <span>
        <img src="~/Content/Images/pashmina1.png" />
    </span>
</center>
<style>
    .image {
        display: block;
        width: 100%;
        height: auto;
    }

    /*.grow {
        transition: all .2s ease-in-out;
    }*/

    .overlay:hover {
        transform: scale(1.1);
    }

    .overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: #C19040;
        overflow: hidden;
        width: 100%;
        height: 0;
        transition: .5s ease;
    }

    .container .blog-thumb:hover .overlay {
        height: 20%;
        transform: scale(1.1);
    }

    .container .blog-thumb:hover .zoom {
        transform: scale(1.2);
    }
</style>
<section class="tz-our-blog theme-white">


    <div class="container">

        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-9 col-xs-12">
                    <div class="our-blog-item theme-gray" style="height:400px;width:300px; margin:auto;">

                        <div class="blog-thumb" style="height:400px;width:300px;">

                            <a href="@Url.Action("ViewItem", "Home",new {id=item.Id })">
                                <img src="~/@item.Image" class="zoom" alt=@item.ItemName>
                                <div class="overlay">
                                    <div class="text" style="color:white; margin-left:10px;margin-right:10px;  ">@item.ItemName &nbsp;Rs. @item.Price</div>
                                </div>
                            </a>
                        </div>

                    </div>
                </div>
            }


        </div>
        <!--end class row-->

        @*<a href="@Url.Action("Items","Home")">
            <span><img src="~/Content/Images/loadmore.png" style="margin:14px 4px 4px 1000px;" /> </span>
        </a>*@
        <div class="row">


            <div>
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div><!--end class container-->
</section>