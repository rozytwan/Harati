                {
                    a++;
                    <div class="mySlides fade">
                        @*<div class="numbertext">@a/@tot</div>*@
                        <img style="width:1000PX;height:auto;" src="~/@item.image">
                        @*<div class="text">@item.ItemName</div>*@
                    </div>
                    if (a == tot)
                    {
                        a = 0;
                    }
                }
            </div>
            <br>
            <div style="text-align:center">
                @foreach (var item in Model.sliderList)
                {
