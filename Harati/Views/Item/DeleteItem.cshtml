@model Harati.Models.Item
@{
    ViewBag.Title = "DeleteItem";
    Layout = "~/Views/Shared/_LayoutHarati.cshtml";
}

<h2>Delete Item</h2>
<div style="margin-top:12%; margin-left:5%;">

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Item Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ItemName)
            </dd>

            <dt>
                Image
            </dt>

            <dd>
                <img src="~/@Url.Content(Model.Image)" height="300" width="200" alt="Image" />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                Category Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category1.CatName)
            </dd>

        </dl>

        @using (Html.BeginForm("Delete", "Item", new { id = Model.Id }))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index", "Item", null, new { @class = "glyphicon glyphicon-arrow-left" }
       )
            </div>
        }
    </div>
</div>