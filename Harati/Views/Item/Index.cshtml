@model IEnumerable<Harati.Models.Item>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHarati.cshtml";

}

<div style="margin-top:12%; margin-left:5%;">
    <p>
        @Html.ActionLink("Add New Item", "AddItem", "Item")
    </p>
    <h2>Item Details</h2>

    <table id="example" class="table table-striped table-bordered" border="1" width="40">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category1.CatName)
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td>
                    Rs. @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @*@item.Description.ToString().Substring(0, (item.Description.Length > 10) ? 10 : item.Description.Length)*@
                    <img src="~/@Html.DisplayFor(modelItem => item.Image) " height="50" width="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category1.CatName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "../Item/EditItem", new { id = item.Id }) |

                    @Html.ActionLink("Delete", "../Item/DeleteItem", new { id = item.Id })
                </td>
            </tr>
        }

    </table>


</div>