<body>
    <header class="tz-header tz-header2">
        <div class="container">
            <h3 class="tz-logo pull-left" style="margin-left:1.5%;margin-right:20px;">
                <a href="@Url.Action("Index", "Home")" style="text-decoration:none;color:white;">
                    <img src="~/assets/images/logo name.jpg" alt="dekor">
                </a>
            </h3>
            <button data-target=".nav-collapse" class="btn-navbar tz_icon_menu pull-right" type="button">
                <i class="fa fa-bars"></i>
            </button>

            <nav class="pull-right" style="color:white;float:right;color:#087dae;margin-right:5.5%;margin-top:5px;">
                <span class="glyphicon glyphicon-envelope">&nbsp;info@haraticarpet.com</span>&nbsp;
                <span class="glyphicon glyphicon-phone">&nbsp;977-9851097164 | 01-4481225</span>
            </nav>
            <nav class="pull-right">
                <ul class="nav-collapse">
                    <li>
                        <a href="@Url.Action("Index", "Home")" style="text-decoration:none;color:saddlebrown">

                            <b>Home</b>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Carpet", "Home")" style="text-decoration:none;color:saddlebrown">
                            <b>Carpet</b>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Pashmina", "Home")" style="text-decoration:none;color:saddlebrown">
                            <b>Pashmina</b>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Home")" style="text-decoration:none;color:saddlebrown">
                            <b>Contact</b>
                        </a>
                    </li>
                    @*@if (ViewBag.displayMenu != "Yes")
                        {
                            <li>@Html.ActionLink("CONTACT", "Contact", "Home")</li>
                        }
                        @if (ViewBag.displayMenu == "Yes")
                        {
                            <li>
                                @Html.ActionLink("PRODUCTS", "Index", "Item")
                            </li>
                        }*@
                    <li>
                        <a href="@Url.Action("About", "Home")" style="text-decoration:none;color:saddlebrown">
                            <b>About us</b>
                        </a>
                    </li>
                    @*<li>
                            @Html.Partial("_LoginPartial")
                        </li>*@
                </ul>

            </nav>

        </div><!--end class container-->

    </header><!--end class tz-header-->
    <div class="row">
        @RenderBody()
    </div>
    <style>
        div.col-sm-7.five-three {
            width: 60% !important;
        }

        div.col-sm-5.five-two {
            width: 40% !important;
        }
    </style>
    <footer>
        <div class="tz-footer-content">

            <div class="container">
                <div class="row">
                    <div class="col-sm-7" style="text-decoration:none;color:saddlebrown;">
                        <div class="col-sm-7 five-three">
                            <div class="row" style="text-decoration:none;color:saddlebrown">
                                <div class="col-sm-4 footer-item">
                                    <h3 class="module-title ">
                                        <span style="text-decoration:none;color:saddlebrown">
                                            <a href="@Url.Action("Index", "Home")" style="text-decoration:none;color:saddlebrown">
                                                Home
                                            </a>
                                        </span>
                                    </h3>
                                </div>
                                <div class="col-sm-4 footer-item">
                                    <h3 class="module-title">
                                        <span>
                                            <a href="@Url.Action("Carpet", "Home")" style="text-decoration:none;color:saddlebrown">
                                                Carpet
                                            </a>
                                        </span>
                                    </h3>
                                </div>
                                <div class="col-sm-4 footer-item">
                                    <h3 class="module-title">
                                        <span>
                                            <a href="@Url.Action("Pashmina", "Home")" style="text-decoration:none;color:saddlebrown">
