                            </div>
                        </div>
                        <div class="col-sm-5 five-two">
                            <div class="row">
                                <div class="col-sm-6 footer-item">
                                    <h3 class="module-title">
                                        <span>
                                            <a href="@Url.Action("Contact", "Home")" style="text-decoration:none;color:saddlebrown">Contact</a>
                                        </span>
                                    </h3>
                                </div>
                                <div class="col-sm-6 footer-item">
                                    <h3 class="module-title">
                                        <span>
                                            <a href="@Url.Action("About", "Home")" style="text-decoration:none;color:saddlebrown">About Us</a>
                                        </span>
                                    </h3>
                                </div>
                            </div><!-- end inner row -->
